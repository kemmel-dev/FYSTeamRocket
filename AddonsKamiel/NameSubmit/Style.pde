class Style
{
    public color fillColor, strokeColor;
    public int fillOpacity, strokeOpacity, strokeWeight, textSize;

    public Style(color fillColor, color strokeColor, int fillOpacity, int strokeOpacity, int strokeWeight, int textSize)
    {
        this.fillColor = fillColor;
        this.strokeColor = strokeColor;
        this.fillOpacity = fillOpacity;
        this.strokeOpacity = strokeOpacity;
        this.strokeWeight = strokeWeight;
        this.textSize = textSize;
    }
}